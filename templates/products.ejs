<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products - Whop Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
    <nav class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <h1 class="text-xl font-semibold text-gray-900">Whop Dashboard</h1>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/products" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">Products</a>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8 flex-1">
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            <strong>Error:</strong> <%= error %>
        </div>
        <% } %>

        <h2 class="text-2xl font-semibold mb-4">Products</h2>
        <div class="bg-white rounded border">
            <div class="overflow-x-auto">
                <table class="min-w-full text-sm">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="text-left px-4 py-2">Title</th>
                            <th class="text-left px-4 py-2">Product ID</th>
                            <th class="text-left px-4 py-2">Visibility</th>
                            <th class="text-left px-4 py-2">Active Users</th>
                            <th class="text-left px-4 py-2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (products && products.length > 0) { %>
                            <% products.forEach(function(p) { %>
                            <tr class="border-t">
                                <td class="px-4 py-2"><%= p.title || p.name || '' %></td>
                                <td class="px-4 py-2"><%= p.id || '' %></td>
                                <td class="px-4 py-2"><%= p.visibility || '' %></td>
                                <td class="px-4 py-2"><%= activeByProduct[p.id] || 0 %></td>
                                <td class="px-4 py-2">
                                    <a class="text-blue-600 hover:underline" href="/products/<%= p.id %>">View Details</a>
                                </td>
                            </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td class="px-4 py-6 text-center text-gray-500" colspan="5">No products</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <footer class="bg-white border-t">
        <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
            <p class="text-center text-gray-500 text-sm">
                Whop Dashboard
            </p>
        </div>
    </footer>
</body>
</html>
